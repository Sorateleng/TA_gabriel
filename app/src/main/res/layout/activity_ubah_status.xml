<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_ubah_status"
    android:background="@drawable/bggradient">
    
    <LinearLayout
        android:id="@+id/lv_status"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilstatus"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edt">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputstatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="Status"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingVertical="5dp" />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:layout_below="@+id/lv_status"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnubah_status"
        android:text="ubah status"
        android:layout_alignParentRight="false">

    </Button>

    <Button
        android:layout_below="@id/lv_status"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnproses_laporan"
        android:text="proses laporan"
        android:layout_alignParentRight="true">

    </Button>
</RelativeLayout>